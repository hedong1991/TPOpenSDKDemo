<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/view_setting_item"
        android:id="@+id/alias_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include layout="@layout/view_setting_item"
        android:id="@+id/dev_about_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ScrollView
        android:id="@+id/device_add_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_DevAlarm_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_RecordPlan_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_LocalStorage_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_MsgPush_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_TimingReboot_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_SpeakerVolume_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

            <include layout="@layout/view_setting_item"
                android:id="@+id/support_WifiConnectionInfo_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
